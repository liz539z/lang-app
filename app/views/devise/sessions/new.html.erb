<%= render "shared/second-header"%>
<div class="user-form">

<div class="up-form">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="error-messages">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
    <div class="title-form">
  <%= image_tag("account.png", class:"account-icon") %>
<h2 class="user-top-title">Log in</h2>
</div>
  <div class="field">
  <div class="form-group">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:" example@example.com" %>
  </div>
  </div>

  <div class="field">
  <div class="form-group">
    <%= f.label "パスワード " %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder:" 英数字６文字以上" %>
  </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "submit-btn" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</div>

